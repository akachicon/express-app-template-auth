extends ../layout-basic

block content
  div(
    style='margin-top: 1.5rem; ' +
      'padding: .7rem; ' +
      'border-radius: 2px; ' +
      'border: 1px solid #dba6a6; ' +
      'background: #f3e4e4;' +
      'color: #a84341'
    class='col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4'
  )
    h2(
      style='color: #a24121'
      class='text-center'
      role='alert'
    ) #{ statusMessage }

    h5.text-center #{ clientMessage }
